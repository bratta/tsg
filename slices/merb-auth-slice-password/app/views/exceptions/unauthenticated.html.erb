<h1>Login</h1>

<%= error_messages_for session.authentication %>
<% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
<% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>

<form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8">
  <input type="hidden" name="_method" value="PUT" />
  <div class="formRow">
    <label><%= @login_param.to_s.capitalize %>: <br />
      <input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>" class="text">
    </label>
  </div> <!-- close: formRow -->
  <div class="formRow">
    <label><%= @password_param.to_s.capitalize %>: <br/>
      <input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>" class="text">
    </label>
  </div> <!-- close: formRow -->
  <div class="formRow">
    <input type="submit" name="Submit" value="Log In" id="Submit">
  </div> <!-- close: formRow -->
</form>
<p>&nbsp;</p>
<p>Signups are disabled at this time. Thanks!</p>